{
  "name": "marcelthole/openapi-merge",
  "description": "Merge multiple OpenAPI YML/JSON files into one",
  "type": "application",
  "keywords": [
    "openapi",
    "merge"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Marcel Thole",
      "role": "Creator"
    }
  ],
  "require": {
    "php": "^7.4 || ~8.0.0",
    "cebe/php-openapi": "^1.4.2",
    "symfony/yaml": "^v4.0 || ^v5.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^8.1",
    "infection/infection": "^0.20.0",
    "phpstan/phpstan": "^0.12.51",
    "phpstan/phpstan-phpunit": "^0.12.16",
    "phpunit/phpunit": "^9.4",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Mthole\\OpenApiMerge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mthole\\OpenApiMerge\\Tests\\": "tests"
    }
  },
  "scripts": {
    "ci": [
      "@cs-check",
      "@phpunit",
      "@phpstan"
    ],
    "ci-coverage": [
      "@phpunit-coverage",
      "@infection"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "phpunit": "@php -dzend.assertions=1 ./vendor/bin/phpunit --no-coverage",
    "phpunit-coverage": "@php -dzend.assertions=1 ./vendor/bin/phpunit",
    "phpstan": "phpstan analyse",
    "infection": "infection --threads=4 --coverage=build/coverage"
  },
  "config": {
    "sort-packages": true
  },
  "bin": [
    "bin/openapi-merge"
  ]
}
